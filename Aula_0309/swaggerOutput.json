{
  "openapi": "3.0.0",
  "info": {
    "title": "API REST - PFS2",
    "description": "API REST para a construção do backend na disciplina de PFS2",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:5000/"
    }
  ],
  "paths": {
    "/usuario/": {
      "get": {
        "tags": [
          "Usuário"
        ],
        "summary": "Listar todos os usuários",
        "description": "",
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Nenhum usuário encontrado na consulta",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/erro"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/erro"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": [
          "Usuário"
        ],
        "summary": "Cadastra um novo usuário",
        "description": "",
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/usuario"
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "Usuário"
        ],
        "summary": "Altera um usuário existente",
        "description": "",
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/usuario"
              }
            }
          }
        }
      }
    },
    "/usuario/{id}": {
      "delete": {
        "tags": [
          "Usuário"
        ],
        "summary": "Deleta permanentemente um usuário",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "get": {
        "tags": [
          "Usuário"
        ],
        "summary": "Recupera um usuário através de um ID",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "erro": {
        "type": "object",
        "properties": {
          "msg": {
            "type": "string",
            "example": "Mensagem de erro"
          }
        },
        "xml": {
          "name": "erro"
        }
      },
      "usuario": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "example": 999
          },
          "nome": {
            "type": "string",
            "example": "Fulano de Tal"
          },
          "email": {
            "type": "string",
            "example": "fulano@unoeste.br"
          },
          "senha": {
            "type": "string",
            "example": "123abc"
          },
          "ativo": {
            "type": "boolean",
            "example": true
          },
          "perfil": {
            "type": "object",
            "properties": {
              "id": {
                "type": "number",
                "example": 1
              }
            }
          }
        },
        "xml": {
          "name": "usuario"
        }
      }
    }
  }
}